# ============================================
# EpiSPY - Environment Configuration Template
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=false

# Dashboard Configuration
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8501

# Database Configuration
# For SQLite (development): sqlite:///./data/epidemic_data.db
# For PostgreSQL (production): postgresql://user:password@localhost:5432/epidemic_db
DATABASE_URL=sqlite:///./data/epidemic_data.db

# Redis Configuration
# For local: redis://localhost:6379/0
# For Docker: redis://redis:6379/0
REDIS_URL=redis://localhost:6379/0

# AI Model Configuration
# Ollama host (local or remote)
OLLAMA_HOST=http://localhost:11434

# Optional: External AI API Keys (leave empty if not using)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Security Keys (REQUIRED - Generate strong random keys for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./data/logs/app.log

# External API Keys (Optional)
DEEPGRAM_API_KEY=
WEATHER_API_KEY=

# Application Version
VERSION=1.0.0
